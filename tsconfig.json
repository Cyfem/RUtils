{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "rxtutils": ["packages/index.ts"],
      "rxtutils/*": ["packages/*/index.ts"]
    },
    "noEmit": false,
    "declaration": false,
    "emitDeclarationOnly": false
  },
  "include": ["packages"],
  "exclude": ["playground", "**/_utils/**"]
}
